<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1c86ee">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="\u003c"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/tx11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20.0"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/tx21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="yyy"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="yyy"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="50.0"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/tx31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="zzz"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="zzz"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <TextView
                    android:id="@+id/tx34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="100.0"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

                <Button
                    android:id="@+id/change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#1c86ee"
                    android:layout_weight="1">

                </Button>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_weight="1">

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:gravity="center"
                android:text="注：可修改内容仅有昵称和地址">

            </TextView>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>